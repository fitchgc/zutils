{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "lib": ["es2020"],
  "include": [
    "src/**/*.ts",
    "typings/extend.d.ts"
  ]
}
